# OpenCode Configuration Template
# This file is populated at container startup from environment variables.
# DO NOT commit actual API keys to this file.
#
# Built by Blue Fermion Labs - https://bluefermionlabs.com

[llm]
# Model to use for code generation
# Examples: qwen/qwen3-32b, llama-3.3-70b-versatile, claude-opus-4-5-20251101
model = "${OPENCODE_MODEL}"

# Provider configuration (populated from LLM_BASE_URL)
base_url = "${LLM_BASE_URL}"

[agent]
# Working directory for code analysis
working_directory = "${OPENCODE_REPO_DIR}"

# Timeout for operations (in seconds)
timeout = 1800

# Non-interactive mode for automation
non_interactive = true

[git]
# Auto-create branches for fixes
auto_branch = true
branch_prefix = "fix/"

# Auto-commit changes
auto_commit = true

# Commit message format
commit_format = "fix: ${TITLE}\n\n${DESCRIPTION}\n\nGenerated by OpenCode self-healing"

[github]
# GitHub token for PR creation (from GITHUB_TOKEN env var)
# token = loaded from environment

# Auto-create pull requests
auto_pr = true

[safety]
# Enable safety guards
enabled = true

# Skip guards (only for testing)
skip_guards = ${SKIP_GUARDS}
